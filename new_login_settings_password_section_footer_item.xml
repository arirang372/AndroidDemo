<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <import type="android.text.TextUtils" />

        <import type="android.graphics.Color" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.view.AceLoginSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.model.AceLoginSettingsSectionDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/passwordStrengthMeterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="horizontal"
            android:visibility="@{model.shouldShowPasswordStrengthMeter}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/passwordStrengthWeakBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding_quarter"
                android:layout_weight="1"
                android:background="@{Color.parseColor(model.weakPasswordColor)}"
                android:gravity="center"
                android:padding="@dimen/default_padding_quarter"
                android:text="@{model.weakPasswordText}"
                android:textAppearance="@style/Subheading1.Inverse"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/passwordStrengthMediumBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@{Color.parseColor(model.mediumPasswordColor)}"
                android:gravity="center"
                android:padding="@dimen/default_padding_quarter"
                android:text="@{model.mediumPasswordText}"
                android:textAppearance="@style/Subheading1.Inverse"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/passwordStrengthStrongBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_quarter"
                android:layout_weight="1"
                android:background="@{Color.parseColor(model.strongPasswordColor)}"
                android:gravity="center"
                android:padding="@dimen/default_padding_quarter"
                android:text="@{model.strongPasswordText}"
                android:textAppearance="@style/Subheading1.Inverse"
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/passwordValidationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_one_and_half"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:orientation="horizontal"
            android:visibility="@{model.shouldShowPasswordRequirementLayout}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordStrengthMeterLayout"
            tools:visibility="visible">

            <TextView
                android:id="@+id/checkMarkOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Html.fromHtml(model.checkMarkResourceOne)}"
                android:textAppearance="@style/Heading4"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@id/checkMarkTwo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/firstPasswordRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_quarter"
                android:text="@string/passwordStrengthHintOne"
                android:textAppearance="@style/Heading4"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@id/SecondPasswordRequirement"
                app:layout_constraintStart_toEndOf="@id/checkMarkOne"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/checkMarkTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Html.fromHtml(model.checkMarkResourceTwo)}"
                android:textAppearance="@style/Heading4"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/SecondPasswordRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_quarter"
                android:text="@string/passwordStrengthHintTwo"
                android:textAppearance="@style/Heading4"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/checkMarkTwo"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/footerText"
            isBoldStyleLink="@{true}"
            onSpannableTextClicked="@{()-> callback.onTermsOfUseLinkClicked()}"
            spannableText="@{@string/termsOfUse}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:padding="@dimen/default_margin_half"
            android:text="@{model.text}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{!TextUtils.isEmpty(model.text)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordStrengthMeterLayout"
            tools:text="Footer"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>