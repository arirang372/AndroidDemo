<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.usersettings.mvvm.view.AceUserSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.usersettings.mvvm.model.AceUserSettingsSectionItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/right_and_left_inset_light_beige_line_divider_white_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@{model.labelContentDescription}"
            android:padding="@dimen/default_margin_half"
            android:text="@{model.label}"
            android:textAppearance="@style/Heading4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/name" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <TextView
            android:id="@+id/userSettingsText"
            android:layout_width="@dimen/user_settings_text_edit_width"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/default_margin"
            android:contentDescription="@{model.labelContentDescription + ` Text`}"
            android:drawableRight="@{model.editUserSettingButtonDrawable}"
            android:maxLines="3"
            android:onClick="@{()-> callback.onEditUserSettingsButtonClicked()}"
            android:padding="@dimen/default_margin_half"
            android:text="@{model.text}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowUserSettingsText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:text="Kris Johnson"
            tools:visibility="visible" />

        <com.geico.mobile.android.ace.geicoapppresentation.framework.widget.AcePhoneNumberFormattingEditText
            android:id="@+id/userSettingsEditText"
            style="@style/PhoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:background="@null"
            android:contentDescription="Mobile Phone Number Text"
            android:hint="@string/mobileNumberHint"
            android:padding="@dimen/default_margin_half"
            android:text="@={model.text}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowUserSettingsEditText}"
            app:isValid="@{model.isValidPhoneNumber}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="@string/header"
            tools:ignore="HardcodedText"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/userSettingsVehicleSpinner"
            android:layout_width="@dimen/user_settings_spinner_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:contentDescription="Primary Vehicle Dropdown"
            android:onItemSelected="@{(parent,view, position, id) -> callback.onVehicleSpinnerItemSelected(model.vehicles.get(position), position)}"
            android:selectedItemPosition="@={model.selectedVehiclePosition}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowVehicleSpinner}"
            app:callback="@{callback}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"
            app:selectedVehicle="@{model.primaryVehicle}"
            app:vehicles="@{model.vehicles}"
            tools:ignore="HardcodedText"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/userSettingsFuelTypeSpinner"
            android:layout_width="@dimen/user_settings_spinner_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:contentDescription="Vehicle Fuel Type Dropdown"
            android:onItemSelected="@{(parent,view, position, id) -> callback.onFuelTypeSpinnerItemSelected(model.fuelTypes.get(position))}"
            android:selectedItemPosition="@={model.selectedFuelTypePosition}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowFuelTypeSpinner}"
            app:callback="@{callback}"
            app:fuelCodes="@{model.fuelTypeCodes}"
            app:fuelTypes="@{model.fuelTypes}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"
            app:selectedFuelCode="@{model.primaryVehicleFuelCode}"
            tools:ignore="HardcodedText"
            tools:visibility="gone" />


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/userSettingsVehicleColorSpinner"
            android:layout_width="@dimen/user_settings_spinner_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:contentDescription="Vehicle Color Dropdown"
            android:onItemSelected="@{(parent,view, position, id) -> callback.onVehicleColorSpinnerItemSelected(model.matchingVehicleColors.get(position))}"
            android:selectedItemPosition="@={model.selectedVehicleColorPosition}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowVehicleColorSpinner}"
            app:callback="@{callback}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineOne"
            app:layout_constraintTop_toTopOf="parent"
            app:matchingVehicleColors="@{model.matchingVehicleColors}"
            app:selectedVehicleColor="@{model.primaryVehicleColor}"
            app:vehicleColors="@{model.vehicleColors}"
            tools:ignore="HardcodedText"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>