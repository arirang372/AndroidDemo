<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.notificationsettings.mvvm.model.AceNotificationSettingsModel" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.notificationsettings.mvvm.view.AceNotificationSettingsCallback" />

        <variable
            name="focusChangeCallback"
            type="android.view.View.OnFocusChangeListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/focusInterceptor"
            android:visibility="@{!model.shouldShowOnlyDriveEasyAlertOption}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <include
            layout="@layout/push_notifications_layout"
            bind:callback="@{callback}"
            bind:model="@{model}" />

        <View
            android:id="@+id/dividerPushNotifications"
            android:visibility="@{!model.shouldShowOnlyDriveEasyAlertOption}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:layout_marginTop="@dimen/default_padding_half"
            android:layout_marginBottom="@dimen/default_padding_half"
            android:background="@color/lightBeige" />

        <include
            android:id="@+id/smsNotificationsLayout"
            layout="@layout/sms_notifications_layout"
            bind:callback="@{callback}"
            bind:focusChangeCallback="@{focusChangeCallback}"
            bind:model="@{model}" />

        <View
            android:id="@+id/dividerSmsNotifications"
            android:visibility="@{!model.shouldShowOnlyDriveEasyAlertOption}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:layout_marginTop="@dimen/default_padding_half"
            android:layout_marginBottom="@dimen/default_padding_half"
            android:background="@color/lightBeige" />

        <include
            android:id="@+id/emailNotificationsLayout"
            layout="@layout/email_notifications_layout"
            bind:callback="@{callback}"
            bind:focusChangeCallback="@{focusChangeCallback}"
            bind:model="@{model}" />


    </LinearLayout>

</layout>