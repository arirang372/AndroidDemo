<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.mvvm.view.callback.AceTelematicsDashboardCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.mvvm.model.AceTelematicsModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extra_large_margin"
            android:background="@color/cloudy"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/drive_easy_logo_margin"
                app:layout_constraintBottom_toTopOf="@id/driveEasyLogo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/driveEasyLogo"
                android:layout_width="@dimen/drive_easy_logo_width"
                android:layout_height="@dimen/drive_easy_logo_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:contentDescription="Drive Logo"
                android:paddingBottom="@dimen/default_padding"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@id/streakCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_drive_easy_stacked_blue"
                tools:ignore="HardcodedText" />

            <include
                android:id="@+id/streakCard"
                layout="@layout/telematics_streak_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginBottom="@dimen/extra_large_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/driveEasyLogo"
                app:layout_constraintWidth_max="@dimen/telematics_card_max_width"
                bind:callback="@{callback}"
                bind:streakCardAttributes="@{model.dashboardModel.streakCardAttributes}"
                bind:streakDetails="@{model.driver.streakDetails}" />

            <include
                android:id="@+id/lastTripCard"
                layout="@layout/telematics_last_trip_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:layout_marginBottom="@dimen/extra_large_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/streakCard"
                app:layout_constraintWidth_max="@dimen/telematics_card_max_width"
                bind:callback="@{callback}"
                bind:trip="@{model.driver.lastTrip}" />

            <include
                android:id="@+id/scoreCard"
                layout="@layout/telematics_score_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:layout_marginVertical="@dimen/extra_large_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastTripCard"
                app:layout_constraintWidth_max="@dimen/telematics_card_max_width"
                bind:callback="@{callback}"
                bind:model="@{model}" />

            <TextView
                android:id="@+id/yourDrivingHeader"
                style="@style/Heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:text="@string/yourDriving"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreCard" />

            <include
                layout="@layout/family_report_card_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginBottom="@dimen/default_margin_one_and_half"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yourDrivingHeader"
                bind:callback="@{callback}" />

            <TextView
                android:id="@+id/loginMoreHeader"
                style="@style/Heading2"
                android:visibility="@{model.shouldShowLogInForMoreOptions}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:text="@string/loginForMore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/familyReportCardTile" />

            <include
                layout="@layout/get_id_cards_tile"
                bind:callback="@{callback}"
                bind:model="@{model}"/>

            <include
                layout="@layout/get_roadside_help_tile"
                bind:callback="@{callback}"
                bind:model="@{model}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>