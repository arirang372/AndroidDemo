<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.view.AceLoginSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.model.AceLoginSettingsSectionDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/right_and_left_inset_light_beige_line_divider_white_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/currentPasswordLabel"
            android:layout_width="@dimen/login_settings_password_label_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:padding="@dimen/default_margin_half"
            android:text="@{model.label}"
            android:textAppearance="@style/Heading4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Current Password" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/login_settings_password_field_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/passwordField"
                android:layout_width="@dimen/login_settings_password_field_width"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@{model.label.equals(`Current Password`)? @string/currentPassword:``}"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="@dimen/default_margin_half"
                android:singleLine="true"
                android:text="@={model.text}"
                android:textSize="@dimen/text_medium"
                app:callback="@{callback}"
                app:isValid="@{TextUtils.isEmpty(model.errorMessage)}"
                app:passwordSection="@{model}"
                tools:text="@string/password" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>