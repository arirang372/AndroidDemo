<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.mvvm.view.callback.AceTelematicsOutageCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.mvvm.model.outage.AceTelematicsOutageListItem" />
    </data>

    <LinearLayout
        android:id="@+id/telematicsOutageSectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

        <TextView
            android:id="@+id/telematicsOutageSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:gravity="start"
            android:text="@{model.section.sectionTitle}"
            android:textAppearance="@style/Heading3"
            android:textStyle="bold"
            tools:text="Features" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/telematicsOutageSectionItemsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:callback="@{callback}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:outageSectionItems="@{model.section.sectionItems}"
            tools:visibility="visible" />

    </LinearLayout>
</layout>