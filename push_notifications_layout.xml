<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.notificationsettings.mvvm.model.AceNotificationSettingsModel"/>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.notificationsettings.mvvm.view.AceNotificationSettingsCallback"/>
    </data>

    <RelativeLayout
        android:id="@+id/pushNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_padding_half">

        <LinearLayout
            android:id="@+id/errorMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:orientation="vertical">

            <include
                layout="@layout/error_message_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:layout_marginTop="@dimen/large_margin"
                bind:errorText="@{model.errorText}"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pushNotificationTitle"
            style="@style/Heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errorMessageLayout"
            android:layout_marginBottom="@dimen/default_padding"
            android:contentDescription="Push Notifications Heading Text"
            android:text="@string/pushNotifications"
            tools:ignore="HardcodedText"/>

        <CheckBox
            android:id="@+id/pushNotificationCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/pushNotificationTitle"
            android:layout_below="@+id/pushNotificationTitle"
            android:layout_marginEnd="@dimen/default_padding"
            android:checked="@={model.isEnrolledInPushNotifications}"
            android:contentDescription="Push Notifications Checkbox"
            android:onClick="@{() -> callback.onPushNotificationEnrollCheckboxClick()}"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/pushNotificationSubHeading"
            style="@style/Body3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pushNotificationCheckBox"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/pushNotificationCheckBox"
            android:contentDescription="Push Notifications Checkbox Label"
            android:labelFor="@id/pushNotificationCheckBox"
            android:text="@string/allowPushNotifications"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/pushNotificationAdditionalInfo"
            style="@style/Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/pushNotificationSubHeading"
            android:layout_toEndOf="@+id/pushNotificationCheckBox"
            android:labelFor="@id/pushNotificationCheckBox"
            android:text="@string/youWillReceivePushNotifications"/>

        <RelativeLayout
            android:id="@+id/driveEasyAlertPushNotificationOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/pushNotificationAdditionalInfo"
            android:layout_below="@+id/pushNotificationAdditionalInfo"
            android:visibility="@{model.shouldShowDriveEasyPushNotificationOptions}"
            tools:visibility="visible">
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp_dimen"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/lightBeige"/>

            <CheckBox
                android:id="@+id/driveEasyPushNotificationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="@+id/divider2"
                android:layout_below="@+id/divider2"
                android:layout_marginEnd="@dimen/default_padding"
                android:checked="@{model.isEnrolledInDriveEasyPushNotification}"
                android:onClick="@{() -> callback.onDriveEasyPushNotificationEnrollCheckboxClicked()}"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/driveEasyNotificationSubHeading"
                style="@style/Body3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/driveEasyPushNotificationCheckBox"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/driveEasyPushNotificationCheckBox"
                android:labelFor="@id/driveEasyPushNotificationCheckBox"
                android:text="@string/driveEasyAlerts"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/driveEasyNotificationAdditionalInfo"
                style="@style/Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/driveEasyNotificationSubHeading"
                android:layout_toEndOf="@+id/driveEasyPushNotificationCheckBox"
                android:labelFor="@id/driveEasyPushNotificationCheckBox"
                android:text="@string/youWillReceivePushNotificationsForDriveEasyAlerts"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/driveEasyAlertPushNotificationOptions"
            android:visibility="@{model.shouldShowWeatherNotificationCheckbox}"
            tools:visibility="visible">
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp_dimen"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/lightBeige"/>

            <CheckBox
                android:id="@+id/weatherNotificationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="@+id/divider1"
                android:layout_below="@+id/divider1"
                android:layout_marginEnd="@dimen/default_padding"
                android:checked="@={model.isEnrolledInWeatherAlertsNotification}"
                android:contentDescription=""
                android:onClick="@{() -> callback.onWeatherNotificationEnrollCheckboxClicked()}"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/weatherNotificationSubHeading"
                style="@style/Body3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/weatherNotificationCheckBox"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/weatherNotificationCheckBox"
                android:contentDescription=""
                android:labelFor="@id/weatherNotificationCheckBox"
                android:text="@string/severeWeatherAlertsTitle"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/weatherNotificationAdditionalInfo"
                style="@style/Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/weatherNotificationSubHeading"
                android:layout_toEndOf="@+id/weatherNotificationCheckBox"
                android:labelFor="@id/weatherNotificationCheckBox"
                android:text="@string/youWillReceivePushNotificationsForWeatherAlerts"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>