<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.usersettings.mvvm.view.AceUserSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.usersettings.mvvm.model.AceUserSettingsListItem" />

        <variable
            name="itemIndex"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:contentDescription="@{`User Setting Section Title ` + itemIndex}"
            android:text="@{model.title}"
            android:textAppearance="@style/Heading3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:text="@string/yourSettings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userSettingsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:contentDescription="@{`User Setting Section Subtitle `  + itemIndex}"
            android:text="@{model.subtitle}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowSubtitle}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userSettingsTitle"
            tools:ignore="HardcodedText"
            tools:text="@string/userSetUpReason" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userSettingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/default_margin"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            app:callback="@{callback}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userSettingsSubtitle"
            app:userSettingsSections="@{model.userSettingsSectionItems}"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skipButton"
            style="@style/ButtonAsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Skip Button"
            android:onClick="@{()-> callback.onSkipButtonClicked()}"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/geicoBlue"
            android:visibility="@{model.shouldShowSkipButton}"
            app:layout_constraintTop_toBottomOf="@id/userSettingsRecyclerView"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>