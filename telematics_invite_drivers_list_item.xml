<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.registration.mvvm.view.callback.AceTelematicsInviteDriversCallback" />

        <variable
            name="index"
            type="java.lang.Integer" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.registration.mvvm.model.AceTelematicsInviteDriversListItemModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/scoreCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/medium_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:padding="@dimen/card_padding_one_and_half">

            <TextView
                android:id="@+id/name"
                style="@style/Heading3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.driver.firstName}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name" />

            <TextView
                android:id="@+id/phoneNumberLabel"
                style="@style/Heading4"
                android:layout_width="@dimen/telematics_invite_drivers_phone_text_edit_width"
                android:layout_height="wrap_content"
                android:text="@string/mobileNumber"
                android:textColor="@color/geicoTextRegularInverted"
                app:layout_constraintBottom_toBottomOf="@id/editButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/editButton" />

            <TextView
                android:id="@+id/phoneNumber"
                style="@style/Heading4"
                inviteDriversPhoneNumber="@{model.phoneNumber}"
                android:layout_width="@dimen/telematics_invite_drivers_phone_text_edit_width"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="@dimen/default_margin_quarter"
                android:textColor="@color/geicoTextRegularInverted"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/editButton"
                app:layout_constraintEnd_toStartOf="@id/editButton"
                app:layout_constraintTop_toTopOf="@id/editButton"
                tools:text="(555) 555-5555" />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/large_margin"
                android:layout_marginStart="@dimen/medium_margin"
                android:onClick="@{() -> callback.onEditClick(index)}"
                app:layout_constraintBottom_toTopOf="@id/birthYearLabel"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:srcCompat="@drawable/ic_edit_pencil_border"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/birthYearLabel"
                style="@style/Heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/large_margin"
                android:text="@string/birthYear"
                android:textColor="@color/geicoTextRegularInverted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneNumberLabel" />

            <TextView
                android:id="@+id/birthYear"
                style="@style/Heading4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@{String.valueOf(model.driver.birthYear)}"
                android:textColor="@color/geicoTextRegularInverted"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="@id/birthYearLabel"
                tools:text="1975" />

            <Button
                style="@style/RoundedOutlineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/base_padding"
                android:onClick="@{() -> callback.onCallToAddDriverClick()}"
                android:paddingHorizontal="@dimen/extra_large_padding"
                android:text="@string/callToAddDriver"
                android:textAllCaps="false"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                android:visibility="@{model.errorCount > 1}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/birthYear" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>