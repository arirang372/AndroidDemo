<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.view.AceLoginSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.model.AceLoginSettingsListItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/loginSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="@{model.title}"
            android:textAppearance="@style/Heading3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:text="@string/touchIdSettings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/loginSettingsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:text="@{model.subtitle}"
            android:textAppearance="@style/Subheading2"
            android:textStyle="normal"
            android:visibility="@{!TextUtils.isEmpty(model.subtitle)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginSettingsTitle"
            tools:ignore="HardcodedText"
            tools:text="@string/loginSettingsScreenUnlockNeedsReEnabling" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/loginSettingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/default_margin"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            app:callback="@{callback}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginSettingsSubtitle"
            app:loginSettingsSections="@{model.loginSettingsSectionItems}"
            tools:listitem="@layout/new_login_settings_section_item"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>