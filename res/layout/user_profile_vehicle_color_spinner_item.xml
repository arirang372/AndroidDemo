<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.graphics.Color" />

        <import type="android.text.TextUtils" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.usersetting.mvvm.view.AceUserSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoappmodel.AceVehicleColor" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vehicleColorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.name}"
            android:textAppearance="@style/Body3"
            android:padding="@dimen/default_margin_half"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Color Name" />

        <View
            android:id="@+id/vehicleColor"
            android:layout_width="80dp"
            android:layout_height="@dimen/tertiary_button_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin_half"
            android:background="@{!TextUtils.isEmpty(model.hexValue)? Color.parseColor(model.hexValue): Color.WHITE}"
            android:visibility="@{model.optionState.isYes || !TextUtils.isEmpty(model.hexValue)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>