<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.users.mvvm.view.AceUsersCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoappmodel.userprofile.AceUserProfilePerson" />

        <variable
            name="itemIndex"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:contentDescription="@{@string/discountDetailDescription(`User`, itemIndex) + ` Text`}"
        android:onClick="@{()-> callback.onUsersListItemRowClicked(model)}">

        <View
            android:id="@+id/dividerOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:background="@color/lightBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameText"
            style="@style/Subheading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:contentDescription="@{@string/discountDetailDescription(`User Name`, itemIndex) + ` Text`}"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.fullName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dividerOne"
            tools:text="User Name" />

        <TextView
            android:id="@+id/userVehicleText"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@{@string/discountDetailDescription(`User Vehicle`, itemIndex) + ` Text`}"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.vehicleDescription}"
            android:visibility="@{model.shouldShowVehicleDescription}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameText"
            tools:text="User Vehicle" />

        <TextView
            android:id="@+id/userPhoneText"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@{@string/discountDetailDescription(`User Phone`, itemIndex) + ` Text`}"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.mobilePhoneNumber}"
            android:visibility="@{model.shouldShowUserPhone}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userVehicleText"
            tools:text="User Phone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_quarter"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin_quarter"
            android:contentDescription="@{@string/discountDetailDescription(`User Edit`, itemIndex) + ` Button`}"
            android:onClick="@{()-> callback.onEditButtonClicked()}"
            android:text="@string/edit"
            app:visibleInvisible="@{model.shouldShowEditButton}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nextPageArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nextPageArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:contentDescription="@{@string/discountDetailDescription(`User Selection`, itemIndex) + ` Button`}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/right"
            app:tint="@color/geicoBlue" />

        <View
            android:id="@+id/dividerTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/lightBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>