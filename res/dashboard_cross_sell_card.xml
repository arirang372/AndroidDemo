<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.geico.mobile.android.ace.geicoappmodel.dashboard.AceDashboard.DashboardCardType" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.framework.mvvm.model.AceDashboardCard" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.dashboard.mvvm.view.AceDashboardCardsCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crossSellCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_spacing"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/what_is_next_card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding">

            <ImageView
                android:id="@+id/crossSellImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:contentDescription='@{model.title +" CrossSell Image"}'
                android:src="@{model.drawableResourceId}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/discover_offers" />

            <TextView
                android:id="@+id/cardTitle"
                style="@style/Heading4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_padding_quarter"
                android:layout_marginEnd="@dimen/default_margin"
                android:contentDescription='@{model.title +" Card Title"}'
                android:text="@{model.title}"
                app:layout_constraintBottom_toTopOf="@id/cardSubTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/crossSellImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Discover Offers" />

            <TextView
                android:id="@+id/cardSubTitle"
                style="@style/WhatIsNextSubTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:contentDescription='@{model.title +" Card Subtitle"}'
                android:text="@{model.subtitle}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/crossSellImage"
                app:layout_constraintTop_toBottomOf="@id/cardTitle"
                tools:text="More than just car insurance" />

            <Button
                android:id="@+id/moreOffersButton"
                style="@style/SecondaryFlatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_quarter"
                android:contentDescription='@{model.title+" More Offer Button"}'
                android:onClick="@{() -> callback.onMoreOffersSelected(model, context)}"
                android:text="@{model.firstButtonText}"
                android:textAllCaps="false"
                android:textColor="@color/geicoBlue"
                android:visibility="@{ DashboardCardType.DISCOVER_OFFERS.equals(model.cardType) || DashboardCardType.WEATHER_ALERTS_FOR_YOU.equals(model.cardType) || DashboardCardType.TELEMATICS_NEXT_GEN_SIGNUP.equals(model.cardType) ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/seeOfferButton"
                app:layout_constraintTop_toBottomOf="@id/cardSubTitle"
                tools:text="@string/moreOffers" />

            <Button
                android:id="@+id/seeOfferButton"
                style="@style/CrossSellRoundedOutlineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_quarter"
                android:contentDescription='@{model.title+" See Offer Button"}'
                android:gravity="center"
                android:onClick="@{() -> callback.onSeeOfferSelected(model, context)}"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:text="@{DashboardCardType.WEATHER_ALERTS_FOR_YOU.equals(model.cardType)||DashboardCardType.TELEMATICS_NEXT_GEN_SIGNUP.equals(model.cardType) ? @string/learnMore : (DashboardCardType.DISCOVER_OFFERS.equals(model.cardType) ? @string/viewAllOffers : @string/seeOffer)}"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSubTitle"
                tools:text="@string/viewAllOffers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>