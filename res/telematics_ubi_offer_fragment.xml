<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.ubioffer.mvvm.view.AceTelematicsUbiOfferCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.ubioffer.mvvm.model.AceTelematicsUbiOfferModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cloudy">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ubiOfferListItemRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:callback="@{callback}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:ubiOfferListItems="@{model.ubiOfferListItems}"
            tools:listitem="@layout/telematics_ubi_offer_list_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>