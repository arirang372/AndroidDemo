<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.ubioffer.mvvm.view.AceTelematicsUbiOfferCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.telematics.ubioffer.mvvm.model.AceTelematicsUbiOfferDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin_half">

        <ImageView
            android:id="@+id/ubiOfferDetailIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{model.sectionImageResourceId}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_checkmark_in_blue_circle" />

        <TextView
            android:id="@+id/ubiOfferDetailItemTitle"
            android:layout_width="@dimen/telematics_ubi_offer_detail_text_field_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:text="@{model.title}"
            android:textAppearance="@style/Heading3"
            app:layout_constraintStart_toEndOf="@id/ubiOfferDetailIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/setUpDriveEasyTitle" />

        <TextView
            android:id="@+id/UbiOfferDetailItemSubtitle"
            android:layout_width="@dimen/telematics_ubi_offer_detail_text_field_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:text="@{model.subtitle}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/ubiOfferDetailIcon"
            app:layout_constraintTop_toBottomOf="@id/ubiOfferDetailItemTitle"
            tools:text="@string/setUpDriveEasySubtitle"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>