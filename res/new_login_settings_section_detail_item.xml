<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="callback"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.view.AceLoginSettingsCallback" />

        <variable
            name="model"
            type="com.geico.mobile.android.ace.geicoapppresentation.loginsettings.mvvm.model.AceLoginSettingsSectionDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/dividerOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:background="@color/lightBeige"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:padding="@dimen/default_margin_half"
            android:text="@{model.label}"
            android:textAppearance="@style/Heading4"
            android:visibility="@{!model.shouldShowSecurityQuestionSpinner}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerOne"
            tools:text="@string/answer"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{!model.shouldShowSecurityQuestionSpinner}"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text"
            android:layout_width="@dimen/login_settings_security_answer_field_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@null"
            android:hint="@string/enterYourAnswer"
            android:maxLines="1"
            android:padding="@dimen/default_margin_half"
            android:text="@={model.text}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{!model.shouldShowSecurityQuestionSpinner}"
            app:isValid="@{TextUtils.isEmpty(model.errorMessage)}"
            app:layout_constraintStart_toEndOf="@id/guidelineOne"
            app:layout_constraintTop_toBottomOf="@id/dividerOne"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/loginSettingsSecurityQuestionsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:onItemSelected="@{(parent,view, position, id) -> callback.onSecurityQuestionSelected(model.securityQuestionPosition, model.securityQuestions.get(position))}"
            android:selectedItemPosition="@={model.selectedSecurityQuestionPosition}"
            android:textAppearance="@style/Heading4"
            android:textStyle="normal"
            android:visibility="@{model.shouldShowSecurityQuestionSpinner}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerOne"
            app:securityQuestions="@{model.securityQuestions}"
            app:selectedSecurityQuestionPosition="@{model.selectedSecurityQuestionPosition}"
            tools:ignore="HardcodedText"
            tools:visibility="gone" />

        <View
            android:id="@+id/dividerTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dp_dimen"
            android:background="@color/lightBeige"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>